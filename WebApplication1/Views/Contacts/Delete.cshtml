@using WebApplication1.Entity;

@model Contact

<form asp-action="Delete" asp-controller="Contacts" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>First Name:</label>
                <input asp-for="FirstName" disabled  type="text" class="form-control required" placeholder="Enter first name" tabindex="1">
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input asp-for="LastName" disabled  type="text" class="form-control required" placeholder="Enter last name" tabindex="2">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" disabled  type="text" class="form-control required" placeholder="Enter email" tabindex="3">
            </div>
            <div class="form-group">
                <label>Mobile:</label>
                <input asp-for="Mobile" disabled type="text" class="form-control required" placeholder="Enter mobile" tabindex="4">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-danger">
                        Delete Contact
                    </button>
                    <a asp-action="Index" asp-controller="Contacts" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>
